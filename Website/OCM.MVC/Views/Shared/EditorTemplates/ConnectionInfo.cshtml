@model OCM.API.Common.Model.ConnectionInfo

<h2>
    @if (Model.Reference == null)
    {
        @:OCM-CN-@Model.ID
            }
    else
    {@Html.DisplayFor(modelItem => Model.Reference)}

</h2>

