@model OCM.API.Common.Model.POIRecentActivity

@{
    ViewBag.Title = "Activity";
}

<h1>Recent Activity</h1>

<div class="row-fluid">
    <div class="span4">
        <h2>New Locations</h2>
        @Html.Partial("_POIList", Model.POIRecentlyAdded)
    </div>
    <div class="span8">
        <h2>Recent Photos</h2>
        @Html.Partial("_MediaItemList", Model.RecentMedia)
    </div>
</div>


<div class="row-fluid">
    <div class="span4">
        <h2>Updated Locations</h2>
        @Html.Partial("_POIList", Model.POIRecentlyUpdated)
    </div>
    <div class="span8">
        <h2>Recent Comments</h2>
        @Html.Partial("_CommentList", Model.RecentComments)

    </div>
</div>
