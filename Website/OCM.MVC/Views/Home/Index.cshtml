@{
    ViewBag.Title = "The global public registry of electric vehicle charging locations";
    ViewBag.EnableAppMarkeplaceLinks = true;
}



<div class="well ocm-backdrop">

    <div style="float: left; display: inline; margin-right: 1em;">
        <a href="@Url.Action("Index", "POI")">
            <div class="stat">
                <h2><span id="summary-locationcount">-----</span></h2>
                <p>Charging Locations</p>
            </div>
        </a>
    </div>
  
    <div class="info">

        <h3>Open Charge Map <small>the global public registry of electric vehicle charging locations</small></h3>
        <div id="datasummary"></div>

        <p>
            <a class="btn btn-success" href="http://openchargemap.org/app">Search Locations using our Web App &gt;</a>
