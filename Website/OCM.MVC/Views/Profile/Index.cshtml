@model OCM.API.Common.Model.User

@{
    ViewBag.Title = "Index";
}

<h2>Your Profile and Stats</h2>

<div class="row">
    <div class="col-md-8">
        <fieldset>
            <legend>Your Profile</legend>
            
            <div class="well clearfix"><a href="@Url.Action("Edit")" class="btn btn-primary clearfix">Edit Your Profile</a></div>
            

            <div class="display-label">
                @Html.DisplayNameFor(model => model.IdentityProvider)
            </div>
            <div class="display-field">
                @Html.DisplayFor(model => model.IdentityProvider)
            </div>

            <div class="display-label">
                @Html.DisplayNameFor(model => model.Identifier)
            </div>
            <div class="display-field">
                @Html.DisplayFor(model => model.Identifier)
            </div>

            <div class="display-label">
                @Html.DisplayNameFor(model => model.Username)
            </div>
            <div class="display-field">
                @Html.DisplayFor(model => model.Username)
            </div>

            <div class="display-label">
                @Html.DisplayNameFor(model => model.Profile)
            </div>
            <div class="display-field">
                @Html.DisplayFor(model => model.Profile)
            </div>

            <div class="display-label">
                @Html.DisplayNameFor(model => model.Location)
            </div>
            <div class="display-field">
                @Html.DisplayFor(model => model.Location)
            </div>

            <div class="display-label">
                @Html.DisplayNameFor(model => model.WebsiteURL)
            </div>
            <div class="display-field">
                @Html.DisplayFor(model => model.WebsiteURL)
            </div>

            <div class="display-label">
                @Html.DisplayNameFor(model => model.DateCreated)
            </div>
            <div class="display-field">
                @Html.DisplayFor(model => model.DateCreated)
            </div>

            <div class="display-label">
                @Html.DisplayNameFor(model => model.DateLastLogin)
            </div>
            <div class="display-field">
                @Html.DisplayFor(model => model.DateLastLogin)
            </div>

            <div class="display-label">
                @Html.DisplayNameFor(model => model.IsProfilePublic)
            </div>
            <div class="display-field">
                @Html.DisplayFor(model => model.IsProfilePublic)
            </div>

            <div class="display-label">
                @Html.DisplayNameFor(model => model.IsEmergencyChargingProvider)
            </div>
            <div class="display-field">
                @Html.DisplayFor(model => model.IsEmergencyChargingProvider)
            </div>

            <div class="display-label">
                @Html.DisplayNameFor(model => model.IsPublicChargingProvider)
            </div>
            <div class="display-field">
                @Html.DisplayFor(model => model.IsPublicChargingProvider)
            </div>

            <div class="display-label">
                @Html.DisplayNameFor(model => model.EmailAddress)
            </div>
            <div class="display-field">
                @Html.DisplayFor(model => model.EmailAddress)
            </div>
        </fieldset>


    </div>
    <div class="col-md-4">
         <fieldset>
            <legend>Community Stats</legend>
         <div class="stat">
             <h2><span id="summary-reputation">@Html.DisplayFor(model => model.ReputationPoints)</span></h2>
             <p>Reputation Points</p>
         </div>
             </fieldset>

    </div>
</div>
